@model TarifaModel

<h2>Definir Tarifa Base</h2>

<form asp-action="DefinirTarifaBase" asp-controller="Tarifas" method="post">
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <input type="hidden" asp-for="CategoriaId" />

    <div class="form-group">
        <label asp-for="TarifaBase" class="control-label">Nueva tarifa base</label>
        <input asp-for="TarifaBase" class="form-control" />
        <span asp-validation-for="TarifaBase" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" asp-controller="Tarifas" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}